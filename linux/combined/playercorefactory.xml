<playercorefactory>
 <players>
   <player name="save url" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" > "$HOME/Desktop/video-url-$(date +"%m-%d-%y-%H-%M").txt"</args>
     <hidexbmc>false</hidexbmc>
   </player>
  <player name="play" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>export SDL_AUDIODRIVER="alsa"; export AUDIODEV="plughw:1,0"; echo "{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-play -</args>
     <hidexbmc>true</hidexbmc>
   </player>
   <player name="record" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-record - &</args>
     <hidexbmc>false</hidexbmc>
   </player>  
   <player name="record 30 mins" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-record - -t 00:30:00 &</args>
     <hidexbmc>false</hidexbmc>
   </player> 
   <player name="record 1 hour" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-record - -t 01:00:00 &</args>
     <hidexbmc>false</hidexbmc>
   </player> 
   <player name="record 2 hours" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-record - -t 02:00:00 &</args>
     <hidexbmc>false</hidexbmc>
   </player> 
   <player name="record 3 hours" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-record - -t 03:00:00 &</args>
     <hidexbmc>false</hidexbmc>
   </player> 
   <player name="stream" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-stream - &</args>
     <hidexbmc>false</hidexbmc>
   </player> 
   <player name="stream 2 hours" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-stream - -t 02:00:00 &</args>
     <hidexbmc>false</hidexbmc>
   </player> 
   <player name="stream 3 hours" type="ExternalPlayer" audio="false" video="true">
		<filename>echo</filename>
     <args>"{0}" | $HOME/git/kodi-playercorefactory/bash-scripts/rip-stream - -t 03:00:00 &</args>
     <hidexbmc>false</hidexbmc>
   </player> 
 </players>
</playercorefactory>